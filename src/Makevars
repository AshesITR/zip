
OBJECTS = init.o miniz.o rzip.o zip.o

.PHONY: all clean

all: tools/zip tools/unzip $(SHLIB)

tools/zip: miniz.c zip.c tools/zip.c
	$(CC) $(CFLAGS) miniz.c zip.c tools/zip.c -o tools/zip

tools/unzip: miniz.c zip.c tools/unzip.c
	$(CC) $(CFLAGS) miniz.c zip.c tools/unzip.c -o tools/unzip

clean:
	rm -rf $(SHLIB) $(OBJECTS) \
	tools/unzip tools/unzip.exe tools/unzip.dSYM \
	tools/zip tools/zip.exe tools/zip.dSYM
