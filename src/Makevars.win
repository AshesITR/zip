
OBJECTS = init.o miniz.o rzip.o zip.o

.PHONY: all clean

all: tools/zip.exe tools/unzip.exe $(SHLIB)

tools/zip.exe: miniz.c zip.c tools/zip.c
	$(CC) $(CFLAGS) miniz.c zip.c tools/zip.c -o tools/zip.exe

tools/unzip.exe: miniz.c zip.c tools/unzip.c
	$(CC) $(CFLAGS) miniz.c zip.c tools/unzip.c -o tools/unzip.exe

clean:
	rm -rf $(SHLIB) $(OBJECTS) \
	tools/unzip tools/unzip.exe tools/unzip.dSYM \
	tools/zip tools/zip.exe tools/zip.dSYM
	
